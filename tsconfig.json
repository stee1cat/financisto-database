{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es7",
      "es2017.object"
    ],
    "module": "commonjs",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}